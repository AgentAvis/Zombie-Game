            <string>if o_player.dead exit;
if(!occupied){


//A direction variable pointing to the mouse.
var mousedir = point_direction(x,y,mouse_x,mouse_y);

//Always draw above the player
depth = o_player.depth - 1;


//Reloading
if(reloading){
canFire = false;
reload++;
if(reload &gt; reloadTime){
reload = 0;
reloading = false;
canFire = true;
}

}

//Firing the gun
if(canFire and mouse_check_button(mb_left) and ammo[type] &gt; 0 and !reloading){
    
    if(!soundplayed){
    audio_sound_gain(sound,0.01,0);
    audio_sound_pitch(sound,random_range(.9,1.1));
    audio_play_sound_at(sound, x, y, 0, 100, 300, 1, false, 2);
    soundplayed = true;
    }
    
    bulletsFired++;
    if(bulletsFired &gt; clipSize){
    bulletsFired = 0;
    reloading = true;
    exit;
    }

    //Setting up the for loop
    var i = 0;
    var mx = 1;
    //For the shotgun
    if(spr == 2){
    mx = 5;
    }
    if(spr == 4){
    mx = 8;
    }
    barrel_x = lengthdir_x(barrel_length, mousedir);
    barrel_y = lengthdir_y(barrel_height, mousedir);
    for(i = 0; i &lt; mx; i++){
    //Create an instance of bullet
    p = instance_create(x + barrel_x,y + barrel_y,o_bullet);
    //Set that bullets variables
    p.dir = mousedir + (accuracy * random_range(1 - acSilence - acLaser - acScope,-1 + acSilence + acLaser + acScope));
    p.dmg = dmg;
    p.shake = shake;
    p.explosive = hasExploseive
    p.knockback = knockback
    //Set a force
    var xforce = lengthdir_x(5, p.dir);
    var yforce = lengthdir_y(5, p.dir);
    //Apply the force.
    with(p){
            physics_apply_impulse(x,y,xforce,yforce);
           }
    }
    //Decrease the ammo
    ammo[type]--;
    //Set the alarm for the fire rate
    alarm[0] = firerate * room_speed;
    //Set can fire to false
    canFire = false;

}


check_guns();

//Switching the weapons
if(keyboard_check_pressed(ord('1'))){
if(hasGun[1,0] == true){
spr = 1;
}

if(hasGun[1,1] == true){
spr = 5;
}

}

if(keyboard_check_pressed(ord('2'))){
if(hasGun[0,0] == true){
spr = 0;

}


}

if(keyboard_check_pressed(ord('3'))){
if(hasGun[2,0] == true){
spr = 2;

}

}

if(keyboard_check_pressed(ord('4'))){
if(hasGun[3,0] == true){
spr = 3;

}

}

if(keyboard_check_pressed(ord('5'))){
if(hasGun[4,0] == true){
spr = 4;
}

}




//Something for the Has Laser vsriable
